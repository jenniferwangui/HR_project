<p id="notice"><%= notice %></p>

<h1>Listing Leaves</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Type</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leafe| %>
      <tr>
        <td><%= leafe.name %></td>
        <td><%= leafe.department %></td>
        <td><%= leafe.type %></td>
        <td><%= leafe.start_date %></td>
        <td><%= leafe.end_date %></td>
        <td><%= leafe.phone %></td>
        <td><%= link_to 'Show', leafe %></td>
        <td><%= link_to 'Edit', edit_leafe_path(leafe) %></td>
        <td><%= link_to 'Destroy', leafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

